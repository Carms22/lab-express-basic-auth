
<div class="page">
  <img class="" src="images/register.jpg" alt="register" width="1200">
  <div class="center-search">
    <form action="/register" method="post" class="transparent">
      <div class="mb-2">
        <input
          type="text"
          name="name"
          class="custom-form-control form-control py-2 ps-4 {{#if errors.name}}is-invalid{{/if}}"
          placeholder="Name"
          aria-label="User name"
          value="{{ user.name }}"
        >
        {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
      </div>

      <div class="mb-2">
        <input
          type="text"
          name="email"
          class="custom-form-control form-control py-2 ps-4 {{#if errors.email}}is-invalid{{/if}}"
          placeholder="Email: user@example.org"
          aria-label="User email"
          value="{{ user.email }}"
        >
        {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
      </div>

      <div class="mb-3">
        <input
        type="password"
        name="password"
        class="custom-form-control form-control py-2 ps-4 {{#if errors.password}}is-invalid{{/if}}"
        placeholder="Password"
        aria-label="User password"
      >

        {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
      </div>

      <div class="d-grid gap-2">
        <button type="submit" class="button-home border-0">Register</button>
         <div class="d-grid gap-2 mt-2">
          <a href="/login/google" class="btn btn-danger border-0">
          <i class="fa fa-google"></i>
          Login with Google
          </a>
        </div>
      </div>
    </form>
</div>